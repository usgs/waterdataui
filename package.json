{
  "name": "waterdataui-assets",
  "version": "0.1.0dev",
  "description": "Compiled static assets for Water Data For The Nation",
  "main": "index.js",
  "scripts": {
    "test": "karma start",
    "test:watch": "karma start --no-single-run --auto-watch",
    "clean": "rm -rf assets/dist && mkdir assets/dist",
    "build": "npm run clean && run-p build:*",
    "build:css": "node-sass --include-path node_modules/uswds/src/stylesheets assets/src/styles/main.scss | uglifycss > assets/dist/main.css",
    "build:fonts": "mkdir -p assets/dist/fonts && cp node_modules/uswds/src/fonts/* assets/dist/fonts",
    "build:images": "mkdir -p assets/dist/img && cp -r node_modules/uswds/src/img/* assets/dist/img",
    "build:js": "browserify -t uglifyify assets/src/scripts/index.js | uglifyjs -c > assets/dist/bundle.js",
    "serve:static": "live-server --port=9000 --cors --no-browser assets/dist",
    "serve:python": "env/bin/python run.py",
    "start": "run-p watch serve:python",
    "watch": "run-p watch:* serve:static",
    "watch:css": "nodemon -w assets/src/styles -e scss -x \"npm run build:css\"",
    "watch:fonts": "nodemon -w node_modules/uswds/src/fonts -x \"npm run build:fonts\"",
    "watch:images": "npm run build:images",
    "watch:js": "watchify assets/src/scripts/index.js -o assets/dist/bundle.js -dv"
  },
  "engines": {
    "node": "8.9.3"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/usgs/waterdataui.git"
  },
  "author": "USGS",
  "license": "CC0-1.0",
  "bugs": {
    "url": "https://github.com/usgs/waterdataui/issues"
  },
  "homepage": "https://github.com/usgs/waterdataui#readme",
  "devDependencies": {
    "babel-core": "^6.26.0",
    "babel-preset-env": "^1.6.1",
    "babelify": "^8.0.0",
    "browserify": "^14.5.0",
    "jasmine": "^2.8.0",
    "karma": "^2.0.0",
    "karma-browserify": "^5.1.2",
    "karma-chrome-launcher": "^2.2.0",
    "karma-coverage": "^1.1.1",
    "karma-jasmine": "^1.1.1",
    "live-server": "^1.2.0",
    "node-sass": "^4.7.2",
    "nodemon": "^1.13.3",
    "npm-run-all": "^4.1.2",
    "rollupify": "^0.4.0",
    "uglify-js": "^3.2.2",
    "uglifycss": "0.0.27",
    "uglifyify": "^4.0.5",
    "watchify": "^3.9.0"
  },
  "dependencies": {
    "uswds": "^1.4.4"
  },
  "browserify": {
    "transform": [
      "rollupify",
      [
        "babelify",
        {
          "presets": [
            "env"
          ]
        }
      ]
    ]
  }
}
